 <div class="card col-6 shadow-lg p-3 mb-5 bg-white rounded" style="width: 50rem; margin: auto; border-radius: 5px;">
  <div class="card-body" data-controller="toggle">
    <h2>New booking</h2>
    <%= simple_form_for [@car, @booking] do |f| %>
      <%= f.input :start_date , as: :string,
        input_html: { data: { controller: "datepicker" } } %>
      <%= f.input :end_date, as: :string,
        input_html: { data: { controller: "datepicker" } } %>

      <div class="d-flex justify-content-between">
        <%= f.submit %>
        <%= button_tag "more", type: "button", data: { action: "click->toggle#fire" }, class: "btn btn-success" %>
      </div>
    <% end %>
    <div class="card">
      <div class="d-none" data-toggle-target="togglableElement">
        <p class="justify-content-center">PAY HERE</p>
      </div>
    <div>
  </div>
</div>



