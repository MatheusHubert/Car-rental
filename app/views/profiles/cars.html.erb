<section>
  <div class="cardpage">
    <h1 class="texttitle text-center">All <%= current_user.first_name %>'s cars</h1>
    <div class="showbigcards">
      <% @cars.each do |car| %>
        <div class="showsmallcards">
          <%= cl_image_tag car.photos.first.key, height: 180, width: 280, crop: :fill, class:"carimage"%>
          <p><strong><%= car.model %></strong></p>
          <div class="cardtext">
            <p class="cardprice"><b>Price:</b> â‚¬<%= car.price %></p>
            <p><b>Capacity:</b> <%= car.seat_number %></p>
          </div>
          <%= link_to "See Offer", car_path(car.id), class:"button-2" %>
          <%= link_to "Edit", edit_car_path(car.id), class:"button-2" %>
          <%= link_to "Delete",
            profile_path(car.id),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
            class:"button-3"
          %>
        </div>
      <% end %>
    <div>
  </div>
</section>
