<div class= Details>
  <h2> Mariaplaats eo , Utrecht <%= @car.model %></h2>
  <p>Per hours rate: <%= @car.price %></p>
  <p> Seating: <%= @car.seat_number %></p>
</div>

<div class="container">
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
  <ol class="carousel-indicators">
    <% @car.photos.each_with_index do |photo, i| %>
    <li data-target="#carouselExampleIndicators" data-slide-to="<%=i%>" class="active"></li>
    <% end  %>
  </ol>
    <% @car.photos.each do |photo| %>
      <div class="carousel-item active">
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, class:"d-block w-100"%>
      </div>
    <% end %>

  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>



