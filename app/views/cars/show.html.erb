<div class="container">
  <!-- Content here -->
<div class="d-block modela-css">
  <i class="fa-regular fa-share-from-square " style="color: #050505;"></i>
  <%= link_to "Share this car", root_path, class:"text-decoration-none"  %>
 </div>
<div>
  <i class="fa-regular fa-heart  " style="color: #000000;"></i>
  <%= link_to "Save this car",root_path, class:"text-decoration-none"%>
</div>

<div class="text-center mx-5 modela-css">
  <h1><%= @car.model %></h1>
  <p> <%= @car.address %></p>
 </div>

      <div class="d-block text-sm-start mx-5  ">
        <p>For up to <b>â‚¬<%= @car.price%></b> a day </p>
        <p>Car for <%= @car.seat_number %> peoples</p>
    </div>

<div class="row w-100">
  <div class="col-lg-6 my-4">
    <div>
      <div id="carouselExampleControls" class="col d-flex carousel slide resize-css" data-ride="carousel">
        <div class="carousel-inner">
          <div>
            <% @car.photos.each_with_index do |photo, i| %>
            <div class="carousel-item <%= 'active' if i == 0 %>">
              <%= cl_image_tag photo.key, crop: :fill, class:"w-100 h-50"%>
            </div>
          <% end %>
          </div>
        </div>
          <div class="col-lg-6 my-4 d-flex align-items-center">

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>

      </div>
  </div>

  </div>
</div>

      <div class="col map-style" style="width: 100%; height: 300px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>

      <div class= "description-css">
        <h2>Car description</h2>
        <p><%= @car.description %></p>
        <% if (current_user != @car.user) %>
          <div class="d-flex col-sm justify-content-start">
            <%= link_to "Book this car", new_car_booking_path(@car.id), class:"btn btn-info"  %>
          </div>
        <% end %>

          <div class="d-flex col-sm justify-content-end ">
            <%= link_to "View All Car for Rent", root_path, class:"btn btn-flat justify"   %>
          </div>
</div>
