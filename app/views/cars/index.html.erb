<section class="jumbotron text-center" >
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_url "background-large.jpg" %>');">
    <h1 class= "jumbotron-heading">Search Less. Live More.</h1>
    <p class="lead text-muted">We make finding the right car simple.</p>
    <div class="row justify-content-center">
      <div class="col-sm-8 my-3">
        <%= form_with url: root_path, method: :get, class: "d-flex" do %>
          <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Type a keyword"
            %>
          <%= submit_tag "Search Now", name: "", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>

<div class="container justify-content ">
  <h1 class= "All-cars">All cars for Rent</h1>



  <div class="row bg-white ">
      <% @cars.each do |car| %>
        <div class="col-3 my-3">
          <div class="">
            <div class=" shadow-lg p-3 mb-5 bg-white">
              <div class="text-center">
              <%= cl_image_tag car.photos.first.key, height: 180, width: 280, crop: :fill, class:"img-config img-thumbnail  mx-auto w-100 mb-3 " %>
              <p class="h4"><strong><%= car.model %></strong></p>
                <div class="d-flex justify-content-between">
                  <div class="m-3">
                    <p><b>Price:</b> â‚¬<%= car.price %></p>
                  </div>
                  <div class="m-3">
                    <p><b>Capacity:</b> <%= car.seat_number %></p>
                  </div>
                </div>
                <%= link_to "See Offer", car_path(car.id), class:"btn-config btn button-62" %>
            </div>
          </div>
        </div>
    </div>
      <% end %>
  </div>




</div>
</section>
